<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity"
    android:background="@drawable/fondo_gym">



    <ImageView
        android:id="@+id/logo"
        android:layout_width="65dp"
        android:layout_height="70dp"
        android:src="@drawable/logo_gym"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />


    <TextView
        android:id="@+id/tittle"
        android:layout_width="348dp"
        android:layout_height="wrap_content"
        android:text="Fitness App"
        android:textSize="30sp"
        android:background="@color/gris_claro"
        android:textColor="@color/white"
        android:padding="15dp"
        android:gravity="center"
        app:layout_constraintStart_toEndOf="@+id/logo"
        app:layout_constraintTop_toTopOf="parent"/>

        <ImageButton
            android:id="@+id/entrenamiento"
            android:layout_width="160dp"
            android:layout_height="180dp"
            android:backgroundTint="@color/white"
            android:adjustViewBounds="true"
            android:scaleType="centerInside"
            android:src="@drawable/logo_entrenamiento_texto"
            android:layout_marginTop="100dp"
            android:layout_marginStart="35dp"
            app:layout_constraintTop_toBottomOf="@+id/tittle"
            app:layout_constraintStart_toStartOf="parent"
            />

    <ImageButton
        android:id="@+id/tablaEntrenamiento"
        android:layout_width="160dp"
        android:layout_height="180dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="100dp"
        android:adjustViewBounds="true"
        android:backgroundTint="@color/white"
        android:scaleType="centerInside"
        android:src="@drawable/logo_estadisticas_texto"
        android:layout_marginEnd="35dp"
       app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tittle" />

    <ImageButton
        android:id="@+id/tablaDieta"
        android:layout_width="160dp"
        android:layout_height="180dp"
        android:backgroundTint="@color/white"
        android:adjustViewBounds="true"
        android:scaleType="centerInside"
        android:src="@drawable/logo_dieta_texto"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toBottomOf="@+id/tablaEntrenamiento"
        app:layout_constraintStart_toStartOf="@+id/tablaEntrenamiento"
        />





</androidx.constraintlayout.widget.ConstraintLayout>