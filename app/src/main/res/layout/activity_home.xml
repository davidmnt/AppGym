<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity"
    android:background="@color/black">

    <TextView
        android:id="@+id/tittle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Fitness App"
        android:textSize="30sp"
        android:background="@color/gre_claro"
        android:textColor="@color/white"
        android:padding="15dp"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

        <ImageButton
            android:id="@+id/entrenamiento"
            android:layout_width="160dp"
            android:layout_height="180dp"
            android:backgroundTint="@color/black"
            android:adjustViewBounds="true"
            android:scaleType="centerInside"
            android:src="@drawable/logo_gym"
            android:layout_marginTop="50dp"
            android:layout_marginStart="20dp"
            app:layout_constraintTop_toBottomOf="@+id/tittle"
            app:layout_constraintStart_toStartOf="parent"
            />

    <ImageButton
        android:id="@+id/tablaEntrenamiento"
        android:layout_width="160dp"
        android:layout_height="180dp"
        android:backgroundTint="@color/black"
        android:adjustViewBounds="true"
        android:scaleType="centerInside"
        android:src="@drawable/logo_gym"
        android:layout_marginTop="50dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintTop_toBottomOf="@+id/tittle"
        app:layout_constraintStart_toEndOf="@+id/entrenamiento"
        />

    <ImageButton
        android:id="@+id/tablaDieta"
        android:layout_width="160dp"
        android:layout_height="180dp"
        android:backgroundTint="@color/black"
        android:adjustViewBounds="true"
        android:scaleType="centerInside"
        android:src="@drawable/logo_gym"
        android:layout_marginTop="50dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintTop_toBottomOf="@+id/tablaEntrenamiento"
        app:layout_constraintStart_toEndOf="@+id/entrenamiento"
        />





</androidx.constraintlayout.widget.ConstraintLayout>